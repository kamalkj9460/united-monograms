<div id="id01" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom">
        <div class="w3-center">
            <span onclick="document.getElementById('id01').style.display='none'" id="btnClose" class="w3-button w3-large w3-hover-Sand w3-display-topright" title="Close Modal">&times;</span>

        </div>

        <div class="w3-row w3-border w3-topbar w3-bottombar w3-leftbar w3-rightbar">
                       

            <div id="monogramimage"  class="w3-half w3-container  w3-Sand   w3-center ">
            
            </div>   
               <div class="w3-half w3-container   w3-cell w3-light">
                 
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">

                  <p class="line-item-property__field">
                    <label class="ep_block  ">Monogram (first, LAST NAME, middle)<span class="validity"></span></label>
                    <input class="w3-input w3-border  w3-round w3-margin-bottom" form="{{ form_id}}" id="MonogramText" type="text" maxlength="3"  placeholder="ABC"  name="properties[Monogram (first, LAST NAME, middle)]" required>
                  
                        
                </p>  
                   <p class="line-item-property__field">
                    <label class="ep_block" >Choose your State:</label>

                     <select required id="PlaidPattern" form="{{ form_id}}" class="w3-select w3-border" name="properties[PlaidPattern]">
                       <option value="10" data-valname="AL" data-option_value_key="9">Alabama</option><!--07/05/2021-->
                       <option value="13" data-valname="FL" data-option_value_key="12">Florida</option><!--07/05/2021-->
                       <option value="11" data-valname="GA" data-option_value_key="10">Georgia</option><!--07/05/2021-->
                       <option value="9" data-valname="IL" data-option_value_key="8">Illinois</option>
                       <option value="3" data-valname="KY" data-option_value_key="2">Kentucky</option>
                       <option value="5" data-valname="LA" data-option_value_key="4">Louisiana</option>
                       <option value="7" data-valname="NY" data-option_value_key="6">New York</option>
                       <option value="1" data-valname="NC" data-option_value_key="0">North Carolina</option>
                       <option value="8" data-valname="OH" data-option_value_key="7">Ohio</option>
                       <option value="6" data-valname="PA" data-option_value_key="5">Pennsylvania</option>
                       <option value="12" data-valname="SCar" data-option_value_key="11">South Carolina</option><!--07/05/2021-->
                       <option value="2" data-valname="TN" data-option_value_key="1">Tennessee</option>
                       <option value="14" data-valname="TX" data-option_value_key="13">Texas</option><!--07/05/2021-->
                       <option value="4" data-valname="VA" data-option_value_key="3">Virginia</option>
                       
                
                       
                    </select>
                </p>                     
                    <p class="line-item-property__field">
                    <label class="ep_block" style="display: none;" >Outline Color:</label>
                     <select required id="threadcolor" form="{{ form_id}}" style="display: none;"  class="w3-select w3-border" name="properties[Monogram Color]">
                        <option value="State Pride Pink" style="display: none;" data-valcolor="Aff68a8" data-option_value_key="0">State Pride Pink</option>
                    </select>

                  
                 </p>
                  <div id="validatorId">  </div>
                  <label class="ep_block  ">Monogram Style:
                        <div id="debug">  </div>
                      <div id="hiddenMonogramImage">  </div>
                      <div id="PayLinkMonogramImage">  </div>                          
                      <div id="showMonogramImage">  </div>
                    </label>

                    <select required id="MonogramFont" form="{{ form_id}}" class="w3-select w3-border" name="properties[Monogram Style]">
                        <option value="Circle" data-valname="DTGNCPrideCir" data-option_value_key="0">Circle</option>
                       <option value="Vine" data-valname="DTGNCPrideVine" data-option_value_key="1">Vine</option>
                         <option value="2 Letter Circle"   data-valname="DTG2NCPride" data-option_value_key="2">2 Letter Circle</option>
                    </select>
                </p>

                <p class="line-item-property__field">
        
                  {%- include 'MonoAddtoCart' -%}
        
              </div>
            </div>
          </div>
        </div>
        
        
        <!---MonogramPreview End--->
        <button type="button" id="preview-monogram" onclick="document.getElementById('id01').style.display='block'" class="button button--primary">Add your Monogram</button>