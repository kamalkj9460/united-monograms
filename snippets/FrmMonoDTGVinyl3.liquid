<div id="id01" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom">
        <div class="w3-center">
            <span onclick="document.getElementById('id01').style.display='none'" id="btnClose" class="w3-button w3-large w3-hover-Sand w3-display-topright" title="Close Modal">&times;</span>

        </div>

        <div class="w3-row w3-border w3-topbar w3-bottombar w3-leftbar w3-rightbar">
                       

            <div id="monogramimage"  class="w3-half w3-container  w3-Sand   w3-center ">
            
            </div>   
               <div class="w3-half w3-container   w3-cell w3-light">
                 
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">

                  <p class="line-item-property__field">
                    <label class="ep_block  ">Monogram (first, LAST NAME, middle)<span class="validity"></span></label>
                    <input class="w3-input w3-border  w3-round w3-margin-bottom" form="{{ form_id}}" id="MonogramText" type="text" maxlength="3"  placeholder="ABC"  name="properties[Monogram (first, LAST NAME, middle)]" required>
                  
                        
                </p>  
                    <p class="line-item-property__field">
                    <label class="ep_block  ">Color:</label>

                     <select required id="threadcolor" form="{{ form_id}}" class="w3-select w3-border" name="properties[Monogram Color]">
                        <option value="Black" data-valcolor="A000000" data-option_value_key="0">Black</option> 
                        <option value="White" data-valcolor="Affffff" data-option_value_key="1">White</option>
                        <option value="Metallic Silver" data-valcolor="AC0C0C0" data-option_value_key="8">Metallic Silver</option>
                        <option value="Metallic Gold" data-valcolor="AD4AF37" data-option_value_key="8">Metallic Gold</option>
                        <option value="Maroon " data-valcolor="A5f1c2b" data-option_value_key="8">Maroon </option>
                        <option value="Light Purple" data-valcolor="Aceb3ef" data-option_value_key="2">Light Purple</option>
                        <option value="Tiffany Blue" data-valcolor="A94cbbf" data-option_value_key="3">Tiffany Blue</option>
                        <option value="Red" data-valcolor="Ab22628" data-option_value_key="4">Red</option>
                        <option value="Navy" data-valcolor="A161c3b" data-option_value_key="5">Navy</option>
                        <option value="Light Pink" data-valcolor="Af0bdbf" data-option_value_key="6">Light Pink</option>
                        <option value="Pink" data-valcolor="Aca7a92" data-option_value_key="7">Pink</option>
                

                    </select>
                </p>
                  <div id="validatorId">  </div>
                  <label class="ep_block  ">Monogram Style:
                        <div id="debug">  </div>
                      <div id="hiddenMonogramImage">  </div>
                      <div id="PayLinkMonogramImage">  </div>                          
                      <div id="showMonogramImage">  </div>
                    </label>

                    <select required id="MonogramFont" form="{{ form_id}}" class="w3-select w3-border" name="properties[Monogram Style]">
                        <option value="Circle" data-valname="DTGVinyl3Cir" data-option_value_key="0">Circle</option>
                       <option value="Vine"   data-valname="DTGVinylVine3" data-option_value_key="1">Vine</option>
                         <option value="2 Letter Circle"   data-valname="DTG2Vinyl3" data-option_value_key="2">2 Letter Circle</option>
                    </select>
                </p>

                <p class="line-item-property__field">
        
                  {%- include 'MonoAddtoCart' -%}
        
              </div>
            </div>
          </div>
        </div>
        
        
        <!---MonogramPreview End--->
        <button type="button" id="preview-monogram" onclick="document.getElementById('id01').style.display='block'" class="button button--primary">Add your Monogram</button>
   


</div>
   