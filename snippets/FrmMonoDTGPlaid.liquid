<div id="id01" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom">
        <div class="w3-center">
            <span onclick="document.getElementById('id01').style.display='none'" id="btnClose" class="w3-button w3-large w3-hover-Sand w3-display-topright" title="Close Modal">&times;</span>

        </div>

        <div class="w3-row w3-border w3-topbar w3-bottombar w3-leftbar w3-rightbar">
                       

            <div id="monogramimage"  class="w3-half w3-container  w3-Sand   w3-center ">
            
            </div>   
               <div class="w3-half w3-container   w3-cell w3-light">
                 
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">

                  <p class="line-item-property__field">
                    <label class="ep_block  ">Monogram (first, LAST NAME, middle)<span class="validity"></span></label>
                    <input class="w3-input w3-border  w3-round w3-margin-bottom" form="{{ form_id}}" id="MonogramText" type="text" maxlength="3"  placeholder="ABC"  name="properties[Monogram (first, LAST NAME, middle)]" required>
                  
                        
                </p>  
                   <p class="line-item-property__field">
                    <label class="ep_block" >Plaid Pattern:</label>

                     <select required id="PlaidPattern" form="{{ form_id}}"  class="w3-select w3-border" name="properties[PlaidPattern]">
                         <option value="1" data-valname="1" data-option_value_key="0">Burberry</option>
                       <option value="2" data-valname="2" data-option_value_key="1">Red/Black</option>
                       <option value="3" data-valname="3" data-option_value_key="2">Pink/Purple</option>
                       <option value="4" data-valname="4" data-option_value_key="3">Beige</option>
                       <option value="5" data-valname="5" data-option_value_key="4">Maroon</option>
                       <option value="6" data-valname="6" data-option_value_key="5">Orange/Black</option>
                    </select>
                </p>                     
                    <p class="line-item-property__field">
                    <label class="ep_block" >Outline Color:</label>
                     <select required id="threadcolor" form="{{ form_id}}"   class="w3-select w3-border" name="properties[Monogram Color]">
                         <option value="Black" data-valcolor="A000000" data-option_value_key="0">Black</option>
                       <option value="White" data-valcolor="Affffff" data-option_value_key="0">White</option>
                       <option value="Maroon" data-valcolor="A74021b" data-option_value_key="0">Maroon</option>
                       <option value="Light Brown" data-valcolor="Aab6450" data-option_value_key="0">Light Brown</option>
                       <option value="Red" data-valcolor="Aac2021" data-option_value_key="0">Red</option>
                       <option value="Orange" data-valcolor="Af06625" data-option_value_key="0">Orange</option>
                       <option value="Pink" data-valcolor="Aee5886" data-option_value_key="0">Pink</option>
                       <option value="Navy" data-valcolor="A425484" data-option_value_key="0">Navy</option>
                      
                    </select>

                  
                 </p>
                  <div id="validatorId">  </div>
                  <label class="ep_block  ">Monogram Style:
                        <div id="debug">  </div>
                      <div id="hiddenMonogramImage">  </div>
                      <div id="PayLinkMonogramImage">  </div>                          
                      <div id="showMonogramImage">  </div>
                    </label>

                    <select required id="MonogramFont" form="{{ form_id}}" class="w3-select w3-border" name="properties[Monogram Style]">
                        <option value="Circle" data-valname="DTGPlaidCir" data-option_value_key="0">Circle</option>
                       <option value="Vine" data-valname="DTGPlaidvine" data-option_value_key="1">Vine</option>
                         <option value="2 Letter Circle"   data-valname="DTG2Plaid" data-option_value_key="2">2 Letter Circle</option>
                    </select>
                </p>

                <p class="line-item-property__field">
        
                  {%- include 'MonoAddtoCart' -%}
        
              </div>
            </div>
          </div>
        </div>
        
        
        <!---MonogramPreview End--->
        <button type="button" id="preview-monogram" onclick="document.getElementById('id01').style.display='block'" class="button button--primary">Add your Monogram</button>