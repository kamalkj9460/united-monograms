<div id="id01" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom">
        <div class="w3-center">
            <span onclick="document.getElementById('id01').style.display='none'" id="btnClose" class="w3-button w3-large w3-hover-Sand w3-display-topright" title="Close Modal">&times;</span>

        </div>

        <div class="w3-row w3-border w3-topbar w3-bottombar w3-leftbar w3-rightbar">
                       

            <div id="monogramimage"  class="w3-half w3-container  w3-Sand   w3-center ">
            
            </div>   
               <div class="w3-half w3-container   w3-cell w3-light">
                 
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">

                  <p class="line-item-property__field">
                    <label class="ep_block  ">Monogram (first, LAST NAME, middle)<span class="validity"></span></label>
                    <input class="w3-input w3-border  w3-round w3-margin-bottom" form="{{ form_id}}" id="MonogramText" type="text" maxlength="3"  placeholder="ABC"  name="properties[Monogram (first, LAST NAME, middle)]" required>
                  
                        
                </p>  
                   <p class="line-item-property__field">
                    <label class="ep_block" >Glitter Pattern:</label>

                     <select required id="PlaidPattern" form="{{ form_id}}"   class="w3-select w3-border" name="properties[GlitterPattern]">
                         <option value="Gold Glitter" data-valname="2" data-option_value_key="2">Gold Glitter</option>
                            <option value="White Glitter" data-valname="1" data-option_value_key="1">White Glitter</option>
                         
                            <option value="Red Glitter" data-valname="3" data-option_value_key="3">Red Glitter</option>
                         <option value="Rose Gold Glitter" data-valname="4" data-option_value_key="4">Rose Gold Glitter</option>
                         <option value="Silver Glitter" data-valname="5" data-option_value_key="5">Silver Glitter</option>
                         <option value="Champagne Glitter" data-valname="6" data-option_value_key="6">Champagne Glitter</option>
                            
                            <option value="Neon Pink Glitter" data-valname="7" data-option_value_key="7">Neon Pink Glitter</option>
                         <option value="Fuchsia Glitter" data-valname="8" data-option_value_key="8">Fuchsia Glitter</option>
                         <option value="Purple Glitter" data-valname="9" data-option_value_key="9">Purple Glitter</option>
                         <option value="Neon Purple Glitter" data-valname="10" data-option_value_key="10">Neon Purple Glitter</option>
                         <option value="Aqua Glitter" data-valname="11" data-option_value_key="11">Aqua Blue Glitter</option>
                         <option value="Mint Glitter" data-valname="12" data-option_value_key="12">Mint Glitter</option>
                         <option value="Emerald Glitter" data-valname="13" data-option_value_key="13">Emerald Glitter</option>
                         <option value="Black Glitter" data-valname="14" data-option_value_key="14">Black Glitter</option>
                    </select>
                </p>                     
                    <p class="line-item-property__field">
                    <label class="ep_block" style="display: none;" >Outline Color:</label>
                     <select required id="threadcolor" form="{{ form_id}}" style="display: none;"  class="w3-select w3-border" name="properties[Monogram Color]">
                        <option value="White" style="display: none;" data-valcolor="Affffff" data-option_value_key="0">White</option>
                    </select>

                  
                 </p>
                  <div id="validatorId">  </div>
                  <label class="ep_block  ">Monogram Style:
                        <div id="debug">  </div>
                      <div id="hiddenMonogramImage">  </div>
                      <div id="PayLinkMonogramImage">  </div>                          
                      <div id="showMonogramImage">  </div>
                    </label>

                    <select required id="MonogramFont" form="{{ form_id}}"  class="w3-select w3-border" name="properties[Monogram Style]">
                        <option value="Circle" data-valname="DTGGlitterCir" data-option_value_key="0">Circle</option>
                       <option value="Vine" data-valname="DTGGlitterVine" data-option_value_key="1">Vine</option>
                         <option value="2 Letter Circle"   data-valname="DTG2Glitter" data-option_value_key="2">2 Letter Circle</option>
                    </select>
                </p>

                <p class="line-item-property__field">
        
                  {%- include 'MonoAddtoCart' -%}
        
              </div>
            </div>
          </div>
        </div>
        
        
        <!---MonogramPreview End--->
        <button type="button" id="preview-monogram" onclick="document.getElementById('id01').style.display='block'" class="button button--primary">Add your Monogram</button>