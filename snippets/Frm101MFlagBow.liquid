<div id="id01" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom">
        <div class="w3-center">
            <span onclick="document.getElementById('id01').style.display='none'" id="btnClose" class="w3-button w3-large w3-hover-Sand w3-display-topright" title="Close Modal">&times;</span>

        </div>

        <div class="w3-row w3-border w3-topbar w3-bottombar w3-leftbar w3-rightbar">
                       

            <div id="monogramimage"  class="w3-half w3-container  w3-Sand   w3-center ">
            
            </div>   
               <div class="w3-half w3-container   w3-cell w3-light">
                 
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">

                  <p class="line-item-property__field">
                    <label class="ep_block  ">Monogram (first, LAST NAME, middle)<span class="validity"></span></label>
                    <input class="w3-input w3-border  w3-round w3-margin-bottom" form="{{ form_id}}" id="MonogramText" type="text" maxlength="3"  placeholder="ABC"  name="properties[Monogram (first, LAST NAME, middle)]" required>
                  
                        
                </p>  
                    <p class="line-item-property__field">
                    <label class="ep_block  ">Thread Color:</label>

                     <select required id="threadcolor" form="{{ form_id}}" class="w3-select w3-border" name="properties[Thread Color]">
                        <option value="Red" data-valcolor="Add0b0b" data-option_value_key="0">Red</option>
                       <option value="White" data-valcolor="Affffff" data-option_value_key="1">White</option>
                        <option value="Navy" data-valcolor="A13214e" data-option_value_key="2">Navy</option>
                       
                    </select>
                </p>
                  <div id="validatorId">  </div>
                  <label class="ep_block  " >Monogram Style:
                        <div id="debug">  </div>
                      <div id="hiddenMonogramImage">  </div>
                      <div id="PayLinkMonogramImage">  </div>                          
                      <div id="showMonogramImage">  </div>
                    </label>

                    <select required id="MonogramFont" form="{{ form_id}}" class="w3-select w3-border" name="properties[Monogram Style]">
                        <option value="Circle" data-valname="101MFlagBowCir" data-option_value_key="0">Circle</option>
                        <option value="Master Circle" data-valname="101MFlagBowMC" data-option_value_key="1">Master Circle</option>
                        <option value="Vine" data-valname="101MFlagBowVine" data-option_value_key="2">Vine</option>
                        <option value="FishTail" data-valname="101MFlagBowFish" data-option_value_key="3">FishTail</option>
                        <option value="Diamond" data-valname="101MFlagBowDio" data-option_value_key="4">Diamond</option>
                        <option value="Block" data-valname="101MFlagBowBlock" data-option_value_key="5">Block</option>
                        <option value="Stacked" data-valname="101MFlagBowStack" data-option_value_key="6">Stacked</option>
                        <option value="Engraved" data-valname="101MFlagBowEng" data-option_value_key="7">Engraved</option>

                    </select>
                </p>

                <p class="line-item-property__field">
        
                  {%- include 'MonoAddtoCart' -%}
        
              </div>
            </div>
          </div>
        </div>
        
        
        <!---MonogramPreview End--->
        <button type="button" id="preview-monogram" onclick="document.getElementById('id01').style.display='block'" class="button button--primary">Add your Monogram</button>
   