<div id="id01" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom">
        <div class="w3-center">
            <span onclick="document.getElementById('id01').style.display='none'" id="btnClose" class="w3-button w3-large w3-hover-Sand w3-display-topright" title="Close Modal">&times;</span>

        </div>

        <div class="w3-row w3-border w3-topbar w3-bottombar w3-leftbar w3-rightbar">
                       

            <div id="monogramimage"  class="w3-half w3-container  w3-Sand   w3-center ">
            
            </div>   
               <div class="w3-half w3-container   w3-cell w3-light">
                 
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">
                </p>
                <p class="line-item-property__field">

                  <p class="line-item-property__field">
                    <label class="ep_block  ">Sleeve Personalization (2 Letters)<span class="validity"></span></label>
                    <input class="w3-input w3-border  w3-round w3-margin-bottom" form="{{ form_id}}" id="MonogramText" type="text" maxlength="2"  placeholder="AB"  name="properties[Text]" required>
                  
                        
                </p>  
                    <p class="line-item-property__field">
                    <label class="ep_block" style="display: none;">Color:</label>

                     <select required id="threadcolor" form="{{ form_id}}" style="display: none;" class="w3-select w3-border" name="properties[_Monogram Color]">
                         <option value="White" data-valcolor="Affffff" data-option_value_key="0">White</option>

                        
                

                    </select>
                </p>
                  <div id="validatorId">  </div>
                  <label class="ep_block  ">Font:
                        <div id="debug">  </div>
                      <div id="hiddenMonogramImage">  </div>
                      <div id="PayLinkMonogramImage">  </div>                          
                      <div id="showMonogramImage">  </div>
                    </label>

                    <select required id="MonogramFont" form="{{ form_id}}"  class="w3-select w3-border" name="properties[Font]">
                        <option value="Pink Heart with Initials" data-valname="DTGPHeartSlvBold" data-option_value_key="0">Pink Heart with Initials</option>
                       <option value="Pink Heart Only" data-valname="DTGPHeartSlvNo" data-option_value_key="1">Pink Heart Only</option>
                        <option value="Blue Heart with Initials" data-valname="DTGBHeartSlvBold" data-option_value_key="0">Blue Heart with Initials</option>
                       <option value="Blue Heart Only" data-valname="DTGBHeartSlvNo" data-option_value_key="1">Blue Heart Only</option>
                     </select>
                </p>
                <p class="line-item-property__field">

                    {%- include 'MonoAddtoCart' -%}

            </div>
        </div>
    </div>
</div>
<button type="button" id="preview-monogram" onclick="document.getElementById('id01').style.display='block'" class="button button--primary">Make It Yours</button>